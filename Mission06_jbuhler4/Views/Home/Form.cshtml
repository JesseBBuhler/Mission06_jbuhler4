@{
    ViewData["Title"] = "Movie Database Form";
}

@model Mission06_jbuhler4.Models.Movies

<div class="text-center">
    <h1 class="display-4">The Joel Hilton Film Database</h1>
    <h2>Please enter your favorite movies into the form below to add them to the database.</h2>
</div>
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="CategoryID">Category:</label>
        <select required asp-for="CategoryID">
            <option value="">Select Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select><br />
        <label asp-for="Title">Title:</label>
        <input required asp-for="Title" /><br />
        <label asp-for="Year">Year:</label>
        <input required asp-for="Year" /><br />
        <label asp-for="Director">Director:</label>
        <input required asp-for="Director" /><br />
        <label asp-for="Rating">Rating:</label>
        <select required asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" /><br />
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" /><br />

        <button type="submit">Submit Form</button>
    </form>
</div>