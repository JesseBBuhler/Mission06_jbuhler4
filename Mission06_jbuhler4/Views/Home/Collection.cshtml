@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
}

@model List<Movies>

<table class="table table-bordered table-striped">
    <thead class="bold">
        <tr>
            <td>edit</td>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
            <td>delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
        <tr>
            <td>edit</td>
            <td>@x.Category.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>
            <td>delete</td>
        </tr>
            }
    </tbody>
</table>